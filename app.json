{
    "settings": {
        "name": "epic_app",
        "framework": "python/django-rest",
        "deployment_env":"ENV",
        "DEV":{
        }
    },
    "database": [{
        "type": "postgres",
        "identifier": "maindb",
        "__host": "DB_HOSTNAME",
        "__password": "DB_PASSWORD",
        "__db": "DB_NAME",
        "__user": "DB_USERNAME"

    }],
    "models": {
        "User": {
            "__extends": "USER",
            "__main_user":true,
            "__db": "maindb"
        },
        "Movie": {
            "owner": { "type": "foreign", "model":"user", "required": true},
            "title": { "type": "str", "min": 4, "max": 20, "required": true },
            "year": { "type": "int", "min": 1900, "max": 3000 },
            "description": { "type": "str", "min": 30, "max": 200 },
            "duration": { "type": "datetime", "min": 900, "max": 2400, "required": true },
            "__actions": {
                "list":"public",
                "get":"public",
                "all":"owner"
            },
            "__route":"movies",
            "__db": "maindb"
        }
    },
    "deploy": {
        "far": "far future"
    }
}